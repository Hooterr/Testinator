<UICore:BasePage x:TypeArguments="local:ExitPageViewModel" x:Class="Testinator.Updater.ExitPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Testinator.Updater"
             xmlns:UICore="clr-namespace:Testinator.UICore;assembly=Testinator.UICore"
             mc:Ignorable="d">

    <Border VerticalAlignment="Center"
            HorizontalAlignment="Center"
            TextBlock.TextAlignment="Center">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Text="Koniec" 
                       Style="{StaticResource QuestionTextBlockStyle}" />

            <Button Content="Wyjdz"
                    Command="{Binding ExitAppCommand}"
                    Style="{StaticResource BaseUIButton}"
                    Grid.Row="1" />
        </Grid>

    </Border>

</UICore:BasePage>
