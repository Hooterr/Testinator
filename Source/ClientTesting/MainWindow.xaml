<Window x:Class="ClientTesting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientTesting"
        xmlns:core="clr-namespace:Testinator.Core;assembly=Testinator.Core"
        mc:Ignorable="d"
        Title="Client" Height="350" Width="525">
    <Border Padding="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="0" Grid.Row="0">
                <TextBlock Text="Ip:"
                           Margin="0 0 0 5"/>
                <TextBox Text="{Binding Ip, Mode=TwoWay}" x:Name="txtIp"/>
                <TextBlock Text="Port:"
                           Margin="0 5 0 5"/>
                <TextBox Text="{Binding Port, Mode=TwoWay}" x:Name="txtPort"/>

                <TextBlock Text="Name:"
                           Margin="0 0 0 5"/>
                <TextBox Text="{Binding Name, Mode=TwoWay}"/>

                <TextBlock Text="Surname"
                           Margin="0 0 0 5"/>
                <TextBox Text="{Binding Surname, Mode=TwoWay}"/>

                <Button Margin="0 20 0 0" 
                        Content="Begin Connecting" 
                        Command="{Binding StartCommand}" 
                        IsEnabled="{Binding StartPossible}"
                        x:Name="StartButton"/>
                <Button Margin="0 5 0 0" 
                        Content="Disconnect" 
                        Command="{Binding StopCommand}"
                        IsEnabled="{Binding StopPossible}"/>
                <Button Margin="0 5 0 0"
                        Content="Send"
                        Command="{Binding SendCommand}"
                        IsEnabled="{Binding StopPossible}"
                        />
            </StackPanel>

           

            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <TextBlock Text="Attempt: "/>
                <TextBlock Text="{Binding Attempts}"/>
                <TextBlock Text="{Binding Connected}"/>
            </StackPanel>

            <Grid Grid.Column="1" Margin="5 10 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid>
                    <TextBlock Grid.Row="0" Text="Message:" Grid.Column="1" Margin="0 12"/>
                    <Button Content="clear" 
                            HorizontalAlignment="Right" 
                            Height="22" 
                            Margin="0 0 5 0"
                            Command="{Binding ClearCommand}"/>

                </Grid>
                <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="2">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <TextBlock x:Name="txtRec" Text="{Binding Message}"/>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
