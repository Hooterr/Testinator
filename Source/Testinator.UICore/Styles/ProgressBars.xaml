<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Testinator.UICore">

    <Style TargetType="{x:Type ProgressBar}">

        <Setter Property="IsIndeterminate" Value="False" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ProgressBar}">
                    <Grid MinHeight="20">
                        <Rectangle Name="PART_Track" 
                                       Fill="{StaticResource WhiteDarkBrush}" Stroke="{StaticResource BlackLightBrush}" StrokeThickness="1" />
                        <Rectangle Name="PART_Indicator" 
                                       Fill="{StaticResource GreenSeaBrush}" Stroke="{StaticResource BlackLightBrush}" StrokeThickness="1" HorizontalAlignment="Left" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>