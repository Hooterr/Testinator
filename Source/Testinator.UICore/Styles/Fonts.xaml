<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Testinator.UICore"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <FontFamily x:Key="FontMontserratBold">pack://application;,,,/Testinator.UICore;component/Fonts/#Montserrat Bold</FontFamily>
    <FontFamily x:Key="FontMontserratExtraBold">pack://application;,,,/Testinator.UICore;component/Fonts/#Montserrat ExtraBold</FontFamily>
    <FontFamily x:Key="FontMontserratRegular">pack://application;,,,/Testinator.UICore;component/Fonts/#Montserrat Medium</FontFamily>
    <FontFamily x:Key="FontMontserratThin">pack://application;,,,/Testinator.UICore;component/Fonts/#Montserrat Thin</FontFamily>
    <FontFamily x:Key="FontAwesome">pack://application;,,,/Testinator.UICore;component/Fonts/#FontAwesome</FontFamily>

    <FontFamily x:Key="RobotoBlack">pack://application;,,,/Testinator.UICore;component/Fonts/#Roboto Black</FontFamily>
    <FontFamily x:Key="RobotoBlackItalic">pack://application;,,,/Testinator.UICore;component/Fonts/#Roboto Black Italic</FontFamily>
    <FontFamily x:Key="RobotoBlackBold">pack://application;,,,/Testinator.UICore;component/Fonts/#Roboto Black Bold</FontFamily>
    <FontFamily x:Key="RobotoBlackBoldItalic">pack://application;,,,/Testinator.UICore;component/Fonts/#Roboto Black Bold Italic</FontFamily>
    <FontFamily x:Key="RobotoItalic">pack://application;,,,/Testinator.UICore;component/Fonts/#Roboto Italic</FontFamily>
    <FontFamily x:Key="RobotoLight">pack://application;,,,/Testinator.UICore;component/Fonts/#Roboto Light</FontFamily>
    <FontFamily x:Key="RobotoLightItalic">pack://application;,,,/Testinator.UICore;component/Fonts/#Roboto Light Italic</FontFamily>
    <FontFamily x:Key="RobotoMedium">pack://application;,,,/Testinator.UICore;component/Fonts/#Roboto Medium</FontFamily>
    <FontFamily x:Key="RobotoMediumItalic">pack://application;,,,/Testinator.UICore;component/Fonts/#Roboto Medium Italic</FontFamily>
    <FontFamily x:Key="RobotoRegular">pack://application;,,,/Testinator.UICore;component/Fonts/#Roboto</FontFamily>
    <FontFamily x:Key="RobotoThin">pack://application;,,,/Testinator.UICore;component/Fonts/#Roboto Thin</FontFamily>
    <FontFamily x:Key="RobotoThinItalic">pack://application;,,,/Testinator.UICore;component/Fonts/#Roboto Thin Italic</FontFamily>


    <Style TargetType="{x:Type Control}" x:Key="BaseStyle">
        <Setter Property="FontFamily" Value="{StaticResource FontMontserratThin}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeRegular}" />
    </Style>

    <Style TargetType="{x:Type TextBlock}" x:Key="BaseTextBlockStyle">
        <Setter Property="FontFamily" Value="{StaticResource FontMontserratThin}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeRegular}" />
    </Style>

    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseStyle}" />
    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource BaseStyle}" />
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource BaseStyle}" />
    <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource BaseTextBlockStyle}" />
    <Style TargetType="{x:Type ListView}" BasedOn="{StaticResource BaseStyle}" />

    <system:Double x:Key="FontSizeSmaller">10</system:Double>
    <system:Double x:Key="FontSizeSmall">12</system:Double>
    <system:Double x:Key="FontSizeRegular">14</system:Double>
    <system:Double x:Key="FontSizeLarge">20</system:Double>
    <system:Double x:Key="FontSizeXLarge">24</system:Double>
    <system:Double x:Key="FontSizeXXLarge">32</system:Double>
    <system:Double x:Key="FontSizeTitleLarge">38</system:Double>

    <!-- Naming: use the same names as in the cheatsheet -->
    
    <system:String x:Key="FontAwesomeHamburgerMenuIcon">&#xf0c9;</system:String>
    <system:String x:Key="FontAwesomeTestIcon">&#xf15c;</system:String>
    <system:String x:Key="FontAwesomeCogIcon">&#xf013;</system:String>
    <system:String x:Key="FontAwesomeCogsIcon">&#xf085;</system:String>
