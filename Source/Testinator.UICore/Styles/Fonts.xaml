    <system:String x:Key="FontAwesomeArrowLeftIcon">&#xf0a8;</system:String>
    <system:String x:Key="FontAwesomeRedoAltIcon">&#xf01e;</system:String>
    <system:String x:Key="FontAwesomeCheckIcon">&#xf00c;</system:String>

</ResourceDictionary>