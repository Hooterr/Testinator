<UICore:BasePage x:TypeArguments="Core:TestEditorQuestionsEditorViewModel" x:Class="Testinator.Server.TestEditorQuestionsEditorPage"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                 xmlns:local="clr-namespace:Testinator.Server"
                 xmlns:Core="clr-namespace:Testinator.Server.Core;assembly=Testinator.Server.Core"
                 xmlns:core="clr-namespace:Testinator.Core;assembly=Testinator.Core"
                 xmlns:UICore="clr-namespace:Testinator.UICore;assembly=Testinator.UICore"
                 xmlns:Animations="clr-namespace:Testinator.AnimationFramework;assembly=Testinator.AnimationFramework"
                 mc:Ignorable="d"
                 d:DesignHeight="720"
                 d:DesignWidth="1024">

    <Grid Background="#F3F4F8">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"
                              MinWidth="50" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*"
                              MinWidth="600"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <!-- Title Bar -->
            <RowDefinition Height="60"/>
            <!-- Tittle underline -->
            <RowDefinition Height="1.5"/>
            <!-- Main content-->
            <RowDefinition Height="*"/>
            <!-- Buttons section-->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.ColumnSpan="3" Grid.Row="0" Background="#FFFFFF">
            <TextBlock HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Text="Dodawanie pytań"
                       FontFamily="{StaticResource FontMontserratRegular}"
                       Margin="50 0 0 0"/>
        </Grid>
        <Border Grid.Row="1" Grid.ColumnSpan="3" 
                Background="#4CA194"/>
        <!-- Side menu control -->
        <local:QuestionListControl Grid.Column="0" Grid.Row="2" Grid.RowSpan="3"/>

        <!-- Grid spliter, TODO: delete this later -->
        <GridSplitter Grid.Column="1" Grid.Row="2" Grid.RowSpan="55"
                      Width="6"
                      HorizontalAlignment="Center">
            <GridSplitter.Template>
                <ControlTemplate TargetType="{x:Type GridSplitter}">
                    <Border Background="Black" Padding="1.5 0">
                        <Border Background="{StaticResource BlackLightBrush}"/>
                    </Border>
                </ControlTemplate>
            </GridSplitter.Template>
        </GridSplitter>
        
        <!-- Question type tiles -->
        <Grid Grid.Column="2" Grid.Row="1" Grid.RowSpan="3"
              Animations:AnimateSlideAndFadeInFromTopProperty.Value="{Binding QuestionTypeDialogVisible}"
              Background="#EEEFF3"
              Panel.ZIndex="100">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Button Content="Pytanie ABC" 
                Grid.Row="0" Grid.Column="0"
                Background="#4CA194"
                Margin="5"
                Command="{Binding SelectQuestionTypeCommand}"
                CommandParameter="{x:Static core:QuestionType.MultipleChoice}"/>

            <Button Content="Pytanie z checkboxami" 
                Grid.Row="1" Grid.Column="1"
                Background="#4CA194"
                Margin="5"
                Command="{Binding SelectQuestionTypeCommand}"
                CommandParameter="{x:Static core:QuestionType.MultipleCheckboxes}"/>

            <Button Content="Pytania z textboxem" 
                Grid.Row="0" Grid.Column="2"
                Background="#4CA194"
                Margin="5"
                Command="{Binding SelectQuestionTypeCommand}"
                CommandParameter="{x:Static core:QuestionType.SingleTextBox}"/>

            <Button Grid.Row="3" Grid.Column="1"
                    Style="{StaticResource BaseUIButton}"
                    Content="Zakończ dodawanie pytań"
                    Command="{Binding GoNextPhaseCommand}"/>

        </Grid>

        <!-- Question Editor -->
        <Border Grid.Column="2" Grid.Row="2" 
                CornerRadius="5"
                BorderThickness="1"
                Margin="25"
                Background="#FFFFFF">

            <Grid>

                <Grid.RowDefinitions>
                    <!-- Tittle-->
                    <RowDefinition Height="50"/>
                    <!-- Task -->
                    <RowDefinition Height="145"/>
                    <!-- Main content-->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Task field -->
                <Grid Grid.Row="1">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Grid.Row="0"
                               Text="Pytanie: "
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="15 0"/>

                    <local:ImagesEditorControl Grid.Row="0" Grid.Column="1"
                                               DataContext="{Binding ImagesEditorViewModel}"
                                               Height="50"/>

                    <TextBox Grid.Row="1" Grid.ColumnSpan="2"
                             Style="{StaticResource TestEditorInputField}"
  
                             Tag="Wpisz treść pytania"

                             Margin="15 0"/>

                </Grid>                
                
                <!-- Tittle box -->
                <StackPanel Grid.Row="0" Background="#F5FAF4" Orientation="Horizontal">
                    <TextBlock Text="Pytanie wielokrotnego wyboru (Wiele poprawnych odpowiedzi)"
                               VerticalAlignment="Center"
                               FontFamily="{StaticResource FontMontserratRegular}"
                               Margin="15 0"/>
                </StackPanel>
                
                <local:MultipleChoiceQuestionEditor Visibility="{Binding CurrentQuestionType, Converter={local:QuestionTypeToVisibilityConverter}, 
                                                                     ConverterParameter={x:Static core:QuestionType.MultipleChoice}}" 
                                                    Grid.Row="2"/>
            </Grid>
        </Border>

        <!-- Buttons section -->
        <Grid Grid.Column="2" Grid.Row="3">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Grid.Row="3"
                    CornerRadius="5"
                    BorderThickness="1"
                    BorderBrush="Black"
                    Margin="10 10 10 15"
                    Height="75"
                    MaxWidth="350"
                    Padding="15 5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal"
                                Grid.Row="0">
                        <TextBlock Text="Ilość pytań:"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource QuestionTextBlockStyle}"/>

                        <TextBlock Text="2"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource QuestionTextBlockStyle}"/>

                    </StackPanel>


                    <StackPanel Orientation="Horizontal"
                                Grid.Row="1">

                        <TextBlock Text="Łącznie punktów:"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource QuestionTextBlockStyle}"/>

                        <TextBlock Text="15"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource QuestionTextBlockStyle}"/>

                    </StackPanel>
                </Grid>
                
            </Border>
            <Button Content="Zatwierdź pytanie" 
                    Grid.Column="1"
                    Style="{StaticResource BaseUIButton}"
                    Command="{Binding SubmitCommand}"
                    VerticalAlignment="Bottom"/>

            <Button Content="Koniec pytań" 
                    Grid.Column="2"
                    Style="{StaticResource BaseUIButton}"
                    Command="{Binding GoNextPhaseCommand}"
                    VerticalAlignment="Bottom"/>
        </Grid>

    </Grid>

</UICore:BasePage>
