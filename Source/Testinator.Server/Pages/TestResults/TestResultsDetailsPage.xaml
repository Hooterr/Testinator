<UICore:BasePage x:TypeArguments="Core:TestResultsDetailsViewModel" x:Class="Testinator.Server.TestResultsDetailsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Testinator.Server"
             xmlns:UICore="clr-namespace:Testinator.UICore;assembly=Testinator.UICore"
             xmlns:Core="clr-namespace:Testinator.Server.Core;assembly=Testinator.Server.Core"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1024">
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="{StaticResource GreenLightBrush}">
            <Button Content="Wróć"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Style="{StaticResource BaseUIButton}"
                    Command="{Binding ReturnCommand}"
                    />
        </Border>
        
        <ScrollViewer Grid.Row="1" Padding="5">
            <DataGrid AutoGenerateColumns="False" 
                      ItemsSource="{Binding Clients}"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Stretch" >
                <DataGrid.Columns>
                    <DataGridTextColumn Width="*" IsReadOnly="True" Header="Imię" Binding="{Binding ClientName}"/>
                    <DataGridTextColumn Width="*" IsReadOnly="True" Header="Nazwisko" Binding="{Binding ClientSurname}"/>
                    <DataGridTextColumn Width="*" IsReadOnly="True" Header="Liczba punktów" Binding="{Binding PointsScored}"/>
                    <DataGridTextColumn Width="*" IsReadOnly="True" Header="Ocena" Binding="{Binding Mark, Converter={local:MarkToTextConverter}}"/>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>

    </Grid>
</UICore:BasePage>
